<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"

    >


    <Toolbar
        android:id="@+id/toolbar_fragment_log_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffa500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حساب کاربری"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="30dp"/>

    </Toolbar>


    <EditText
        android:id="@+id/editText_fragment_log_in"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_fragment_log_in"
        android:layout_marginTop="246dp"
        android:hint="حساب کاربری خود را وارد کنید"
        android:textSize="20dp"
        android:backgroundTint="#ffa500"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editText_fragment_log_in"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/editText_fragment_log_in"
        app:layout_constraintEnd_toEndOf="@id/editText_fragment_log_in"
        android:text="تایید"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:backgroundTint="#ffa500"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="برای ایجاد حساب کلیک کنید"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/editText_fragment_log_in"
        android:layout_marginTop="300dp"
        app:layout_constraintEnd_toEndOf="@id/editText_fragment_log_in"
        app:layout_constraintStart_toStartOf="@id/editText_fragment_log_in"
        android:background="@drawable/rounded_edittext_background"/>


</androidx.constraintlayout.widget.ConstraintLayout>